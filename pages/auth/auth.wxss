/* pages/auth/auth.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
  min-height: 100vh;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 100rpx;
  box-sizing: border-box;
}

/* 适配小屏幕和输入法弹出时的布局 */
.auth-form {
  padding: 50rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
}

/* 确保在输入框聚焦时不会被输入法遮挡 */
.auth-container {
  width: 100%;
  max-width: 600rpx;
  position: relative;
  z-index: 1;
  margin: 0 auto;
  display: block;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.auth-header {
  padding: 40rpx 0;
  text-align: center;
}

.auth-form {
  padding: 50rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
}

.input-group {
  text-align: left;
  margin-bottom: 40rpx;
}

.auth-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #00ff88;
  display: block;
  margin-bottom: 20rpx;
}

.auth-subtitle {
  font-size: 32rpx;
  color: #cccccc;
  display: block;
}

.input-group {
  margin-bottom: 40rpx;
  text-align: left;
}

.input-label {
  font-size: 28rpx;
  color: #cccccc;
  display: block;
  margin-bottom: 15rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.input-field {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(0, 255, 136, 0.3);
  border-radius: 15rpx;
  padding: 40rpx 100rpx 40rpx 25rpx;
  color: #ffffff;
  font-size: 36rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 1.8;
  min-height: 140rpx;
  word-break: break-all;
  text-overflow: clip;
  white-space: normal;
  z-index: 1;
}

.eye-icon {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.7);
  z-index: 2;
  padding: 10rpx;
  border-radius: 50%;
}

.eye-icon:active {
  background: rgba(255, 255, 255, 0.1);
  color: #00ff88;
}

.input-field:focus {
  border-color: #00ff88;
  box-shadow: 0 0 20rpx rgba(0, 255, 136, 0.3);
}

.password-strength {
  margin: 30rpx 0;
}

.strength-label {
  font-size: 24rpx;
  color: #cccccc;
  display: block;
  margin-bottom: 10rpx;
}

.strength-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.strength-fill {
  height: 100%;
  transition: all 0.3s ease;
  border-radius: 4rpx;
}

.strength-fill.weak {
  width: 33%;
  background: linear-gradient(90deg, #ff6b6b, #ff8e8e);
}

.strength-fill.medium {
  width: 66%;
  background: linear-gradient(90deg, #ffa726, #ffb74d);
}

.strength-fill.strong {
  width: 100%;
  background: linear-gradient(90deg, #00ff88, #00cc6a);
}

.strength-text {
  font-size: 24rpx;
  color: #999999;
}

.auth-btn {
  width: 100%;
  margin: 40rpx 0;
  font-size: 36rpx;
  padding: 30rpx;
}

.auth-actions {
  text-align: center;
  margin-top: 20rpx;
}

.action-text {
  color: #667eea;
  font-size: 28rpx;
  text-decoration: underline;
  cursor: pointer;
}

.auth-btn[disabled] {
  opacity: 0.5;
  background: #666666;
}

.auth-tips {
  margin-top: 40rpx;
  padding: 30rpx;
  background: rgba(0, 255, 136, 0.05);
  border-radius: 15rpx;
  border: 1rpx solid rgba(0, 255, 136, 0.2);
}

.tips-title {
  font-size: 28rpx;
  color: #00ff88;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #cccccc;
  display: block;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.auth-footer {
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #666666;
}
