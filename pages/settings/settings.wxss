/* pages/settings/settings.wxss - 响应式主题样式 */

/* 全局主题变量引用 */
.page-container {
  background: var(--theme-background, #0f1a2e);
  color: var(--theme-text-primary, #ffffff);
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: var(--theme-card-bg, rgba(102, 126, 234, 0.15));
  border: 1rpx solid var(--theme-card-border, rgba(102, 126, 234, 0.4));
  box-shadow: 0 8rpx 24rpx var(--theme-shadow, rgba(102, 126, 234, 0.5));
}
.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #0f1a2e 0%, #1a0f2e 100%);
  min-height: 100vh;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.4);
  margin-bottom: 30rpx;
  box-shadow: 0 0 30rpx rgba(102, 126, 234, 0.3);
}

.user-info {
  text-align: center;
  padding: 30rpx;
}

.user-title {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: block;
  margin-bottom: 15rpx;
}

.user-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 主题设置 */
.theme-setting {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.4);
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.2);
}

.theme-setting:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.25) 0%, rgba(118, 75, 162, 0.25) 100%);
}

.theme-setting .setting-icon {
  font-size: 40rpx;
}

.theme-setting .setting-title {
  color: #ffffff;
}

.theme-setting .setting-desc {
  color: #667eea;
}

/* 设置列表 */
.settings-list {
  margin-bottom: 30rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.setting-item:active {
  transform: scale(0.98);
  background: rgba(102, 126, 234, 0.05);
}

.setting-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(102, 126, 234, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.4);
}

.setting-content {
  flex: 1;
}

.setting-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.setting-arrow {
  font-size: 32rpx;
  color: #667eea;
}

/* 主题选择弹窗 */
.theme-picker-modal {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.4);
  border-radius: 30rpx;
  padding: 40rpx;
  width: 90%;
  max-width: 650rpx;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 0 50rpx rgba(102, 126, 234, 0.5);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(102, 126, 234, 0.3);
}

.modal-title {
  font-size: 38rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.modal-close {
  font-size: 44rpx;
  color: #999999;
  padding: 10rpx;
  transition: all 0.3s ease;
}

.modal-close:active {
  color: #667eea;
  transform: rotate(90deg);
}

.theme-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.theme-item {
  transition: all 0.3s ease;
}

.theme-item:active {
  transform: scale(0.95);
}

.theme-preview {
  aspect-ratio: 1;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.theme-item.active .theme-preview {
  border-color: #667eea;
  box-shadow: 0 0 30rpx rgba(102, 126, 234, 0.6);
}

.theme-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
  filter: drop-shadow(0 0 10rpx rgba(255, 255, 255, 0.5));
}

.theme-name {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.theme-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #667eea;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 0 15rpx rgba(102, 126, 234, 0.6);
}

/* 应用信息 */
.app-info {
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: block;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.2);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.info-value {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 统计信息 */
.stats-info {
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-top: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 25rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.stat-item:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.25) 0%, rgba(118, 75, 162, 0.25) 100%);
  transform: scale(0.95);
}

.stat-number {
  font-size: 42rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 26, 46, 0.9);
  backdrop-filter: blur(20rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 500rpx;
}

.modal-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(102, 126, 234, 0.3);
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.8;
  text-align: center;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
}
