/* pages/categories/categories.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
  min-height: 100vh;
}

/* 头部区域 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #00ff88;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.add-icon {
  font-size: 32rpx;
}

/* 分类列表 */
.categories-list {
  margin-bottom: 40rpx;
}

.category-item {
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.category-item:active {
  transform: scale(0.98);
}

.category-header {
  display: flex;
  align-items: center;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.category-info {
  flex: 1;
}

.category-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 24rpx;
  color: #999999;
}

.category-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 10rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(0, 255, 136, 0.2);
  transform: scale(0.9);
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #00ff88;
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
  padding: 10rpx;
}

.modal-body {
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #cccccc;
  display: block;
  margin-bottom: 15rpx;
}

.input-field {
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(0, 255, 136, 0.3);
  border-radius: 15rpx;
  padding: 20rpx;
  color: #ffffff;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.icon-selector {
  white-space: nowrap;
}

.icon-item {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 15rpx;
  transition: all 0.3s ease;
}

.icon-item.selected {
  border-color: #00ff88;
  background: rgba(0, 255, 136, 0.2);
}

.color-selector {
  white-space: nowrap;
}

.color-item {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.color-item.selected {
  border-color: #ffffff;
  transform: scale(1.2);
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
}
