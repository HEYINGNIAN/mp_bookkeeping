/* pages/passwords/passwords.wxss - 响应式主题样式 */

/* 全局主题变量引用 */
.page-container {
  background: var(--theme-background, #0f1a2e);
  color: var(--theme-text-primary, #ffffff);
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: var(--theme-card-bg, rgba(102, 126, 234, 0.15));
  border: 1rpx solid var(--theme-card-border, rgba(102, 126, 234, 0.4));
  box-shadow: 0 8rpx 24rpx var(--theme-shadow, rgba(102, 126, 234, 0.5));
}
.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #0f1a2e 0%, #1a0f2e 100%);
  min-height: 100vh;
}

/* 头部区域 */
.header-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  align-items: center;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.4);
  border-radius: 50rpx;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.2);
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  color: #ffffff;
  font-size: 28rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #667eea;
  filter: drop-shadow(0 0 10rpx rgba(102, 126, 234, 0.8));
  margin-left: 10rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.add-icon {
  font-size: 32rpx;
}

/* 密码列表 */
.passwords-list {
  margin-bottom: 40rpx;
}

.password-item {
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.password-item:active {
  transform: scale(0.98);
}

.password-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.password-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(0, 255, 136, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.password-info {
  flex: 1;
}

.password-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.password-account {
  font-size: 24rpx;
  color: #999999;
}

.password-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 10rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(0, 255, 136, 0.2);
  transform: scale(0.9);
}

.password-content {
  margin-bottom: 20rpx;
}

.password-field {
  display: flex;
  margin-bottom: 15rpx;
}

.field-label {
  font-size: 24rpx;
  color: #999999;
  width: 120rpx;
  flex-shrink: 0;
}

.field-value {
  font-size: 26rpx;
  color: #cccccc;
  flex: 1;
  word-break: break-all;
}

.password-text {
  font-family: monospace;
  font-size: 28rpx;
}

.url-text {
  color: #667eea;
  filter: drop-shadow(0 0 10rpx rgba(102, 126, 234, 0.8));
  text-decoration: underline;
}

.note-text {
  color: #cccccc;
  line-height: 1.5;
}

.password-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.password-time {
  font-size: 22rpx;
  color: #666666;
}

.password-strength {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  color: #ffffff;
}

.password-strength.weak {
  background: rgba(255, 107, 107, 0.3);
}

.password-strength.medium {
  background: rgba(255, 167, 38, 0.3);
}

.password-strength.strong {
  background: rgba(0, 255, 136, 0.3);
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  /* 修改为flex-end，将模态框固定在屏幕底部 */
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  /* 确保在输入法弹出时不会被顶起 */
  -webkit-overflow-scrolling: touch;
}

.modal-content {
  width: 100%;
  /* 增加最大高度，确保内容可以完整显示 */
  max-height: 85vh;
  /* 确保内容始终可见并可以滚动 */
  overflow-y: auto;
  border-radius: 25rpx 25rpx 0 0;
  /* 固定定位，防止被输入法顶起 */
  position: relative;
  transform: translateY(0);
  transition: transform 0.3s ease;
  /* 增加滚动条样式 */
  scrollbar-width: thin;
  scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
}

/* 隐藏滚动条但保留功能 */
.modal-content::-webkit-scrollbar {
  width: 6rpx;
}

.modal-content::-webkit-scrollbar-track {
  background: transparent;
}

.modal-content::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  filter: drop-shadow(0 0 10rpx rgba(102, 126, 234, 0.8));
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
  padding: 10rpx;
}

.modal-body {
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #cccccc;
  display: block;
  margin-bottom: 15rpx;
}

.input-field {
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(0, 255, 136, 0.3);
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  color: #ffffff;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 1.5;
  min-height: 90rpx;
}

.password-input-group {
  position: relative;
}

.password-input {
  padding-right: 80rpx;
}

.password-toggle {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #667eea;
  filter: drop-shadow(0 0 10rpx rgba(102, 126, 234, 0.8));
  padding: 10rpx;
}

.password-strength-indicator {
  margin-top: 15rpx;
}

.strength-label {
  font-size: 24rpx;
  color: #cccccc;
  display: block;
  margin-bottom: 10rpx;
}

.strength-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.strength-fill {
  height: 100%;
  transition: all 0.3s ease;
  border-radius: 4rpx;
}

.strength-fill.weak {
  width: 33%;
  background: linear-gradient(90deg, #ff6b6b, #ff8e8e);
}

.strength-fill.medium {
  width: 66%;
  background: linear-gradient(90deg, #ffa726, #ffb74d);
}

.strength-fill.strong {
  width: 100%;
  background: linear-gradient(90deg, #00ff88, #00cc6a);
}

.strength-text {
  font-size: 24rpx;
  color: #999999;
}

.textarea-field {
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(0, 255, 136, 0.3);
  border-radius: 15rpx;
  padding: 20rpx;
  color: #ffffff;
  font-size: 28rpx;
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
}

.icon-selector {
  white-space: nowrap;
}

.icon-item {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 15rpx;
  transition: all 0.3s ease;
}

.icon-item.selected {
  border-color: #00ff88;
  background: rgba(0, 255, 136, 0.2);
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
}
