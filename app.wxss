/* app.wxss - 动态主题样式 */
page {
  background: #0a0a0a;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif;
  position: relative;
  transition: background 0.5s ease;
}

/* 全局容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: transparent;
  transition: background 0.5s ease;
}

/* 霓虹科技感按钮 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.5);
  border-radius: 30rpx;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  box-shadow: 
    0 0 30rpx rgba(102, 126, 234, 0.5),
    0 4rpx 15rpx rgba(0, 0, 0, 0.3);
  transition: all 0.5s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 0 15rpx rgba(102, 126, 234, 0.3),
    0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.btn-primary:active::before {
  left: 100%;
}

.btn-secondary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border: 2rpx solid rgba(245, 87, 108, 0.5);
  border-radius: 30rpx;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  box-shadow: 
    0 0 30rpx rgba(245, 87, 108, 0.5),
    0 4rpx 15rpx rgba(0, 0, 0, 0.3);
}

.btn-danger {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  border: 2rpx solid rgba(250, 112, 154, 0.5);
  border-radius: 30rpx;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  box-shadow: 
    0 0 30rpx rgba(250, 112, 154, 0.5),
    0 4rpx 15rpx rgba(0, 0, 0, 0.3);
}

/* 卡片样式 - 根据主题动态变化 */
.card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 25rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.5s ease;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 100%; }
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-left: 20rpx;
  transition: color 0.5s ease;
}

/* 霓虹输入框样式 */
.input-group {
  margin: 30rpx 0;
}

.input-label {
  font-size: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.input-field {
  background: rgba(102, 126, 234, 0.1);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 20rpx;
  padding: 20rpx;
  color: #ffffff;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #667eea;
  box-shadow: 
    0 0 0 4rpx rgba(102, 126, 234, 0.2),
    0 0 30rpx rgba(102, 126, 234, 0.3);
  background: rgba(102, 126, 234, 0.15);
}

/* 霓虹列表样式 */
.list-item {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 20rpx;
  padding: 25rpx;
  margin: 15rpx 0;
  border-left: 6rpx solid #667eea;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.list-item:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  box-shadow: 0 0 30rpx rgba(102, 126, 234, 0.4);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.5);
  }
  50% {
    box-shadow: 0 0 40rpx rgba(102, 126, 234, 0.8);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

.slide-in {
  animation: slideIn 0.3s ease-out;
}

.glow-effect {
  animation: glow 2s infinite;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.3);
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}
